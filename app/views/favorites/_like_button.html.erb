<% if current_user.like?(micropost) %>
  <%= form_with(model: micropost, local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'unfavorite', class: 'btn btn-danger btn-sm btn-justified' %>
  <% end %>
<% else %>
  <%= form_with(model: micropost, local: true,) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id, method: :post %>
    <%= f.submit 'favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>